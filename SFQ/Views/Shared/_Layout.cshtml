<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Fantasy Queue</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="Super Fantasy Queue | made for Github's 2013 game-off'" />
    <meta name="author" content="Oded Welgreen">
    <meta name="keywords" content="Game off,GitHub,HTML5,Web game">
    @Html.Partial("Analytics")
</head>
<body>

    <div class="container body-content">
        @RenderBody()

    </div>
    <footer>
        <p>Made by Inja Games for Github's 2013 game-off</p>
        <ul>
            <li><a href="https://twitter.com/injagames" target="_blank"><img src="~/Content/Images/twitter.png" /> </a></li>
            <li><a href="https://github.com/OdedW/game-off-2013" target="_blank"><img src="~/Content/Images/github.png" /> </a></li>
            <li><a href="https://soundcloud.com/injagames" target="_blank"> <img src="~/Content/Images/soundcloud.png" /> </a></li>
            <li><a href="mailto:InjaGames@outlook.com" target="_top"><img src="~/Content/Images/email.png" /> </a></li>
        </ul>
        <p>
            <span>Works best on WebKit •</span>
            <a href="http://www.google.com/chrome" target="_blank">Chrome</a>
            <span>or</span>
            <a href="http://www.apple.com/safari" target="_blank">Safari</a>
        </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jsextlibs")
    @RenderSection("scripts", required: false)
</body>
</html>
